<script>//script para cambios en la pagina
    //funcion listen es para cambiar la pantalla a modo movil al ser menor de 750 pixeles
    function listen(e){
        console.log(e);
        if(e.matches){
            //el encabezado se visualizara por columna
            document.querySelector("header").style.flexDirection='column';
        }else{
            //el encabezado se visualizara por fila
            document.querySelector("header").style.flexDirection='row';
        }
    }
    let screenPW = window.matchMedia("(max-width: 750px)");//entrega un true si la pantalla es menor a 750 pixeles
    listen(screenPW);
    screenPW.addListener(listen);//es para que la variable sea escuchada a cada momento
</script>
